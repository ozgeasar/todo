@model IEnumerable<todo.Models.TodoItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Jobs to do!</h1>

<p>
    <a asp-action="Create">Add a New Task</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.IsCompleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RemainingHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {


<tr>
    <td>
        @if (item.IsCompleted)
        {
        <del>@Html.DisplayFor(modelItem => item.Title)</del>
        }
        else
        {
            @Html.DisplayFor(modelItem => item.Title)
        }

    </td>

            <td>
                @Html.DisplayFor(modelItem => item.IsCompleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RemainingHour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @if (item.IsCompleted)
                {
                    <a asp-action="MakeInComplete" asp-route-id="@item.Id">InComplete</a>
                }
                else
                {
                    <a asp-action="MakeComplete" asp-route-id="@item.Id">Complete</a>
                }
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
